<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="stock_picking_extend" inherit_id="stock.report_picking">
            <xpath expr="//th[@name='th_product']" position="before">
                <th class="text-center" width="15%">Image</th>
            </xpath>
            <xpath expr="//table[hasclass('table','table-sm')]/tbody/tr/td" position="before">
                <td align="center">
                    <span t-if="ml.move_id.image" t-field="ml.move_id.image" t-options="{'widget': 'image','style':'max-width: 100px'}"/>
                </td>
            </xpath>
        </template>
    </data>
</odoo>