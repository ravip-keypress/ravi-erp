<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="sale_report_extend_spt" inherit_id="sale.report_saleorder_document">
            <xpath expr="//th[@name='th_description']" position="before">
                <th class="text-center" width="15%">Images</th>
            </xpath>
            <xpath expr="//td[@name='td_name']" position="before">
                <td align="centre">
                    <span t-if="line.product_id.image_128" t-field="line.product_id.image_128" t-options="{'widget': 'image','style':'max-width: 100px'}"/>
                </td>
            </xpath>
        </template>
    </data>
</odoo>
