<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product_product_report_template_spt">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <h2>Products List</h2>
                    <br />

                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th>
                                    Image

                                </th>
                                <th>
                                    SKU

                                </th>
                                <th>
                                   Name

                                </th>
                                <th>
                                    Barcode
                                    
                                </th>
                                <th width="1%">
                                    Weight
                                    (kg)&#160;&#160;
                                </th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="docs" t-as="doc">
                                <td align="center">
                                    <span t-if="doc.image_128" t-field='doc.image_128' t-options="{'widget': 'image','style':'max-width: 100px'}"/>
                                </td>
                                <td>
                                    <span t-field='doc.default_code' />
                                </td>
                                <td>
                                    <span t-field='doc.name' />
                                </td>
                                <td>
                                    <img t-if="doc.barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', doc.barcode, 600, 150)" style="width:100%;height:20%;"/>
                                </td>
                                 <td>
                                    <span t-field='doc.weight' />
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="oe_structure"/>
                </div>
            </t>

        </t>
    </template>
</odoo>