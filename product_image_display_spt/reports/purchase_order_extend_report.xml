<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="purchase_order_report_extend_spt" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//th[@name='th_description']" position="before">
                <th class="text-center" width="15%">Image</th>
            </xpath>
            <xpath expr="//td[@id='product']" position="before">
                <td align="center">
                    <span t-if="line.product_id.image_128" t-field="line.product_id.image_128" t-options="{'widget': 'image','style':'max-width: 100px'}"/>
                </td>
            </xpath>
        </template>
    </data>
</odoo>