<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_sale_order_form_view" model="ir.ui.view">
        <field name="name">inherit.sale.order.form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_id']" position="before">
                <field name="image" widget="image" style="height:10px;width:25px;"/>
            </xpath>
        </field>
    </record>
</odoo>